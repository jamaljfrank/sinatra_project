<!doctype html>
<html>
  <head>
<% if flash(:error) %>
  <%= flash[:error] %> 
<% end %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
</head>
 <body>
 <div class="col-md-4 col-md-offset-4">

<h1> Welcome, <%= @user.username %></h1>
<a href="/games"><button>Sort by Name</button></a>
<a href="/games/players"><button>Sort by Players</button></a>
<h2> Your Game Collection </h2>

<a href="/games/new"><button>Add Game</button></a>

<a href="/logout"><button>Log Out</button></a>

</div>

<div class="container">
<div class="row">


<% @user.games.sort_by(&:console).each do |game| %>
<div class="col-sm-4">
<p>
<br>
   <ul> <a href="/games/<%=game.id%>/show"><b><%=game.name%><b></a>[<%=game.console[0..3]%>][<%=game.players%>] </ul>
  
  
    </p>
    </div>
<% end %>

</div>
</div>

</body>
</html>