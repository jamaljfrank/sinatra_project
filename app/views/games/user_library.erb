<!doctype html>
<html>
  <head>
<% if flash(:error) %>
  <%= flash[:error] %> 
<% end %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
</head>
 <body>

<h1> Welcome, <%= @user.username %></h1>
<h2> Your Game Collection </h2>

<a href="/games/add"><button>Add Game</button></a>

<a href="/logout"><button>Log Out</button></a>
<div class="container">
<div class="row">

<div class="col-4">
<div class="container">
<% @user.games.sort_by(&:name).each do |game| %>

    <p>

    <a href="/games/<%=game.id%>/show"><b><%=game.name%><b></a>
    <ul><b>Console:</b> <%=game.console %> </ul>
    <ul><b>Number of Players:</b> <%=game.players %> </ul>
      
    </p>

<% end %>
</div>
</div>
</div>
</div>

</body>
</html>